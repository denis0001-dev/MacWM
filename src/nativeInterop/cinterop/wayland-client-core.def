headers = wayland-client-core.h
headerFilter = wayland-client-core.h
package = wayland.client.core

compilerOpts = -I/usr/include
linkerOpts = -lwayland-client-core

---
struct wl_display* wl_display_create(const char *name) {
    return wl_display_connect(name);
}

void wl_display_destroy(struct wl_display *display) {
    return wl_display_disconnect(display);
}

typedef struct wl_display wlDisplay;